{
  "name": "Hatch Postcard Creator",
  "version": "1.4",
  "description": "Creates postcard for Hatch Canada",
  "background": {
    "persistent": false,
    "scripts": ["background.js", "mystyles.css"]
  },
  "browser_action": {
    "default_icon": "camera.png",
    "default_title": "Take a screen shot!"
  },
  "permissions": [
    "activeTab",
	"tabs", 
    "http://*/*", 
    "https://*/*"
  ],
  "manifest_version": 2
}
